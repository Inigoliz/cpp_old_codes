/* Integracion de f(x), funcion analitica, por el metodo de la Cuadratura Gaussiana */

void cuadratura_gaussiana(double(*f)(double), double a, double b, int n, double &integral){

  /* Variables
     a: limite inferior
     b: limite superior
     n: numero de pasos
     tau: paso
     integral: valor final de la integral
  */

  double tau = (b-a)/double(n); // paso, tama√±o del intervalo
  integral = 0.0;

  // Declaracion de las w para Cuadratura Gaussiana-6

  double w[6] = {
    0.1713244924,
    0.1713244924,
    0.360761573,
    0.360761573,
    0.4679139346,
    0.4679139346,
  }

  double x[6] = {
    0.9324695142,
    -0.9324695142,
    0.6612093865,
    -0.6612093865,
    0.2386191861,
    -0.2386191861,
  }


}
